<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#757575"
        app:behavior_hideable="false"
        app:behavior_peekHeight="90dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            card_view:cardCornerRadius="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.494"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.498">

            <TextView
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:text="Soloppgang kl. 13:37"
                android:padding="10dp"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="410dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:id="@+id/temperature_item_up"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/cloud_item_up"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.25">

                    <ImageView
                        android:id="@+id/temperature_icon_up"

                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/thermometer" />

                    <TextView
                        android:id="@+id/temperature_text_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cloud_item_up"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.25">

                    <ImageView
                        android:id="@+id/cloud_icon_up"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/cloudsun" />

                    <TextView
                        android:id="@+id/cloud_text_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/air_item_up"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/wind_item_up"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.242">

                    <ImageView
                        android:id="@+id/air_icon_up"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/factory_green" />

                    <TextView
                        android:id="@+id/air_text_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wind_item_up"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/rain_item_up"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.242">

                    <ImageView
                        android:id="@+id/wind_icon_up"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/wind" />

                    <TextView
                        android:id="@+id/wind_text_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rain_item_up"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/temperature_item_up">

                    <ImageView
                        android:id="@+id/rain_icon_up"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/umbrella" />

                    <TextView
                        android:id="@+id/rain_text_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="150dp"
                android:text="Solnedgang kl. 13:37"
                android:padding="10dp"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="410dp"
                android:layout_height="100dp"
                android:layout_marginTop="200dp">


                <LinearLayout
                    android:id="@+id/temperature_item_down"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/cloud_item_down"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.25">

                    <ImageView
                        android:id="@+id/icon_temperature_down"

                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/thermometer" />

                    <TextView
                        android:id="@+id/temperature_text_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cloud_item_down"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.25">

                    <ImageView
                        android:id="@+id/cloud_icon_down"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/sun" />

                    <TextView
                        android:id="@+id/cloud_text_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/air_item_down"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/wind_item_down"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.242">

                    <ImageView
                        android:id="@+id/air_icon_down"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/factory_orange" />

                    <TextView
                        android:id="@+id/air_text_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wind_item_down"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/rain_item_down"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_bias="0.242">

                    <ImageView
                        android:id="@+id/wind_icon_down"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/wind" />

                    <TextView
                        android:id="@+id/wind_text_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rain_item_down"
                    android:layout_width="81dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/temperature_item_down">

                    <ImageView
                        android:id="@+id/rain_icon_down"

                        android:layout_width="42dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        card_view:srcCompat="@drawable/umbrella" />

                    <TextView
                        android:id="@+id/rain_text_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="TextView"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="67dp" />

                    >
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>





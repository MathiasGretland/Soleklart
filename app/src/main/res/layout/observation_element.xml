<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center"
    android:background="@color/white"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.494"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.498">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="415dp"
            android:layout_height="150dp">


            <LinearLayout
                android:id="@+id/temperature_item"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/cloud_cover_item"
                card_view:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon"

                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    card_view:srcCompat="@drawable/ic_outline_wb_sunny_24" />

                <TextView
                    android:id="@+id/temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="67dp" />

                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cloud_cover_item"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/cloud_icon"

                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    card_view:srcCompat="@drawable/id_cloud" />

                <TextView
                    android:id="@+id/cloud_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="67dp" />

                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wind_item"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_marginStart="0dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toEndOf="@+id/air_item"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.242">

                <ImageView
                    android:id="@+id/wind_icon"

                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center|fill_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    card_view:srcCompat="@drawable/ic_wind" />

                <TextView
                    android:id="@+id/wind_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="67dp" />

                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/air_item"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/sunset_item"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.242">

                <ImageView
                    android:id="@+id/air_icon"

                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    card_view:srcCompat="@drawable/ic_air_quality" />

                <TextView
                    android:id="@+id/air_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="67dp" />

                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sunset_item"
                android:layout_width="81dp"
                android:layout_height="84dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/temperature_item">

                <ImageView
                    android:id="@+id/sunset_icon"

                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    card_view:srcCompat="@drawable/ic_sunset" />

                <TextView
                    android:id="@+id/sunset_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="67dp" />

                >
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
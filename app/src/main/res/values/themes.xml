<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HimmelTitting" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryLightVariant</item>
        <item name="colorOnPrimary">@color/primaryDarkVariant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryKontrast</item>
        <item name="colorSecondaryVariant">@color/primaryKontrastLightVariant</item>
        <item name="colorOnSecondary">@color/primaryKontrastDarkVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- Style for button in fragment_maps-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- To change style of searchView-->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/weather</item>
    </style>

    <!-- To change style of searchView-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        ...
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <!-- Color of text in bottomsheet-->
    <style name="textColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Color of cardview background -->
    <style name="cardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Color of the whole bottomsheet -->
    <style name="constraintStyle">
        <item name="android:background">@drawable/bottom_background_light</item>
        <item name="android:elevation">24dp</item>
        <item name="android:outlineProvider">paddedBounds</item>
    </style>

    <!-- Styles the bottomNavigatonBar's theme-->
    <style name="bottomNavBarTheme">
        <item name="itemBackground">?attr/colorPrimary</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <!-- Sets color of the fragmentContainerView in activity_main-->
    <style name="mainFragmentContainerStyle">
        <item name="android:background">@color/primaryLightVariant</item>
    </style>

    <!-- Colors for the container around button and search bar in activity_main-->
    <style name="containerForButtonAndSearch">
        <item name="android:background">@color/primaryLightVariant</item>
    </style>

    <!-- Colors for the container in favorites and settings-->
    <style name="containerForFavoritesSettings">
        <item name="android:background">@color/primaryLightVariant</item>
    </style>

    <style name="dataOutputItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="dataOutputText" parent="@style/textColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">TextView</item>
    </style>

    <style name="dataOutputImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Colors for constraintLayout in settings-->
    <style name="containerForConstraintLayout">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Colors for switches in settings-->
    <style name="switches">
        <!-- Active thumb track & track color -->
        <item name="colorControlActivated">@color/primaryDarkVariant</item>
        <!-- Inactive track color -->
        <item name="android:colorForeground">@color/primaryDarkVariant</item>
    </style>

    <!-- Check for what mode the Android Emulator is set to-->
    <string name="mode">Day</string>

    <style name="CustomCalendarMonth" parent="AppTheme">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
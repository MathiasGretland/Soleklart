<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HimmelTitting" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryVariant">@color/darkVariant</item>
        <item name="colorOnPrimary">@color/darkVariantDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkKontrast</item>
        <item name="colorSecondaryVariant">@color/darkKontrastVariant</item>
        <item name="colorOnSecondary">@color/darkKontrastDarkVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for button in activity_main-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- To change style of searchView-->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/weather</item>
    </style>

    <!-- To change style of searchView-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        ...
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>


    <!-- Color of text in bottomsheet-->
    <style name="textColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Color of cardview background -->
    <style name="cardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/weather</item>
    </style>

    <!-- Color of the whole bottomsheet -->
    <style name="constraintStyle">
        <item name="android:background">@color/darkerBackground</item>
    </style>

    <!-- Styles the bottomNavigatonBar's theme-->
    <style name="bottomNavBarTheme">
        <item name="itemBackground">?attr/colorPrimary</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <!-- Sets color of the fragmentContainerView in activity_main-->
    <style name="mainFragmentContainerStyle">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Colors for the container around button and search bar in activity_main-->
    <style name="containerForButtonAndSearch">
        <item name="android:background">@color/primaryLightVariant</item>
    </style>

    <!-- Colors for the container in favorites and settings-->
    <style name="containerForFavoritesSettings">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Colors for linearLayout in settings-->
    <style name="containerForLinearLayout">
        <item name="android:background">@color/black</item>
    </style>


</resources>